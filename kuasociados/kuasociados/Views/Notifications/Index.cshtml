@model IEnumerable<kuasociados.Contract.Models.Notification>

@{
    ViewBag.Title = "Index";
}

<section class="notificaciones">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Notificaciones sin leer</h1>
                <hr>
            </div>
        </div>
        <div class="row">  
            @if (Model.Count() == 0)
            {
                <div class="col-md-12 text-center">
                    <div class="alert-success">No tienes notificaciones sin leer.</div>
                </div>
            }
            else
            {
                <div class="col-md-6 col-md-offset-3">
                    @foreach (var notification in Model)
                    {        
                        <div class="well">
                            <div class="row">
                                <div class="col-md-8">
                                    <h4>@notification.Description</h4>
                                </div>
                                <div class="col-md-4 text-center">
                                    <a href="@Url.Action("DeactivateNotification","Notifications", new { idnotification = notification.Id })">
                                        <label class="text-danger">Marcar como leída</label>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }               
        </div>
    </div>
</section>
