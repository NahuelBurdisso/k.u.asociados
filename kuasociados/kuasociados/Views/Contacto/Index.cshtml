<section class="contacto">
    <div class="container">
        <div class="row mvxl">
            <div class="col-md-6">
                <div class="">
                    <form class="form-red" method="post">
                        <h3 class="text-center">Contáctanos</h3>
                        <div class="row mvl">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input id="fname" name="name" type="text" placeholder="Nombre" class="form-control">
