@model kuasociados.Contract.Models.Institution
@{
    var isSecretary = Roles.IsUserInRole(WebSecurity.CurrentUserName, "Secretary");
    ViewBag.Title = "Index";
    var mailto = "mailto:" + Model.Mail;
}

<section class="contacto">
    <div class="container">
        <div class="row mvxl">
            <div class="col-md-6">
                <div class="">
                    <form class="form-red" method="post">
                        <h3 class="text-center">Contáctanos</h3>
                        <div class="row mvl">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input id="fname" name="name" type="text" placeholder="Nombre" class="form-control">
                                </div>
                            </div>

                   
          
                            <div class="col-md-6">
                                <div class="form-group">

                                    <input id="lname" name="name" type="text" placeholder="Apellido" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row mvl">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <input id="email" name="email" type="text" placeholder="Email" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="row mvl">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <textarea class="form-control" id="message" name="message" placeholder="Ingresa tu mensaje aquí" rows="7"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row mvl">
                            <div class="col-md-12 text-center">
                                <div class="form-group">
                                        <button type="submit" class="button button--wapasha button--text-thick button--text-upper button--size-s">Enviar</button>
                                    </div>
                                </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div>
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="text-center">Nuestra información
                            @if(isSecretary)
                            {
                                <span class="text-right"><a class="btn btn-primary" href="@Url.Action("EditInstitution", "Contacto")"><i class="fa fa-pencil" aria-hidden="true"></i></a></span>
                            }  
                            </h3>
                            <hr>
                        </div>
                        <div class="panel-body text-center">
                            <ul class="contacto_ul">
                                <li>
                                    <i class="fa fa-2x fa-home"></i>
                                    <p class="contacto_ul_p">@Model.Direccion</p>
                                </li>
                                <li>
                                    <i class="fa fa-clock-o" style="font-size: 25px;"></i>
                                    <p class="contacto_ul_p">@Model.HorarioAtencion</p>
                                </li>
                                <li>
                                    <i class="fa fa-2x fa-phone"></i>
                                    <p class="contacto_ul_p">@Model.Tel</p>
                                </li>
                                <li>
                                    <i class="fa fa-3x fa-mobile"></i>
                                    <p>@Model.Celular</p>
                                </li>
                                <li>
                                    <i class="fa fa-2x fa-envelope-o"></i>
                                    <a href="@mailto"><p>@Model.Mail</p></a>
                                </li>
                             </ul>
                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

